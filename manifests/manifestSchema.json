{
  "id": "http://traeve.com/hardlyrelevant",

  "definitions": {
    "track": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "artist": { "type": "string" }
      },
      "required": ["title", "artist"]
    },
    "side": {
      "type": "object",
      "properties": {
        "mp3Path": { "type": "string" },
        "imgPath": { "type": "string" },
        "downloadLink": { "type": "string" },
        "streamLink":   { "type": "string" },
        "tracks": { 
          "type": "array",
          "minLength": 1,
          "items": { "$ref": "#/definitions/track" }
        }
      },
      "required": ["imgPath", "mp3Path", "downloadLink", "streamLink", "tracks"]
    }
  },

  "type": "object",
  "properties": {
    "volume": { "type": "integer" },
    "subtitle": { "type": "string" },
    "recipient": { "type": "string" },
    "emailMsg": { "type": "string" },
    "facebookMsg": { "type": "string" },
    "outputDir": { "type": "string"},
    "sideA": { "$ref": "#/definitions/side" },
    "sideB": { "$ref": "#/definitions/side" }
  },
  "additionalProperties": false,
  "required": [ "volume", "subtitle", "recipient", "emailMsg", "facebookMsg", "outputDir", "sideA", "sideB" ]
}
